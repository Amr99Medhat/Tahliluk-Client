<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:tint="@color/error">
            <corners android:bottomRightRadius="@dimen/_20sdp" android:topRightRadius="@dimen/_20sdp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:tint="@color/primary_dark">
            <corners android:bottomRightRadius="@dimen/_20sdp" android:topRightRadius="@dimen/_20sdp" />
        </shape>
    </item>
    <item>
        <shape android:tint="@color/primary">
            <corners android:bottomRightRadius="@dimen/_20sdp" android:topRightRadius="@dimen/_20sdp" />
        </shape>
    </item>

</selector>
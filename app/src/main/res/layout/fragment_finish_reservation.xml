<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/background_content_bottom"
tools:context=".fragments.FinishReservationFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="162dp"
        android:src="@drawable/ic_correct" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_confirmation"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_290sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:fontFamily="@font/ntailub"
        android:maxLines="3"
        android:textColor="@color/black_text"
        android:text="@string/succcessConfirmation"
        android:textAlignment="center"
        android:textSize="@dimen/_18ssp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_message"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:fontFamily="@font/ntailub"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/black_text"
        android:textSize="@dimen/_17sdp" />

</RelativeLayout>
